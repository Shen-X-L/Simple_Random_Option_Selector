<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RandomRouletteWheel" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <style name="Theme.MyApp" parent="Theme.Material3.DayNight">
        <!-- 全局覆盖所有MaterialButton的圆角 -->
        <item name="materialButtonStyle">@style/MyStaticButtonStyle</item>
    </style>

    <style name="MyStaticButtonStyle" parent="Widget.Material3.Button">
        <item name="shapeAppearance">@style/MyButtonShape</item>
    </style>

    <style name="MyButtonShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item> <!-- 调整为需要的圆角大小 -->
    </style>
</resources>